<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:websocket="http://www.springframework.org/schema/websocket"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/websocket http://www.springframework.org/schema/websocket/spring-websocket-4.3.xsd
		http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.3.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="memoryMonitorHandler" class="com.coderby.myapp.websocket.handler.MemoryMonitorHandler"/>
	<websocket:handlers>
        <websocket:mapping path="/websocket/memorymonitor" handler="memoryMonitorHandler"/>
	</websocket:handlers>
	
	<mvc:view-controller path="/websocket/display" view-name="websocket/display"/>

	<mvc:view-controller path="/sse/display" view-name="sse/display" />
	<mvc:view-controller path="/sse/memorymonitor" view-name="sse/memorymonitor" />

</beans>
